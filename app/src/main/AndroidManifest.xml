<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cz.muni.fi.trainingdiary" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_ico"
        android:label="@string/app_name"
        android:theme="@style/Theme.Example" >
        <activity
            android:name=".activities.ExerciseAddActivity"
            android:label="@string/app_name"
            android:parentActivityName=".activities.ExerciseViewAll" >
        </activity>
        <activity
            android:name=".activities.WorkoutPlanAddActivity"
            android:label="@string/title_activity_workout_plan_add"
            android:parentActivityName=".activities.WorkoutPlanViewAll" >
        </activity>
        <activity
            android:name=".activities.WorkoutPlanDetailActivity"
            android:label="@string/title_activity_workout_plan_detail"
            android:parentActivityName=".activities.WorkoutPlanViewAll" >
        </activity>
        <activity
            android:name=".activities.WorkoutPlanStartActivity"
            android:windowSoftInputMode="adjustPan"
            android:label="@string/title_activity_workout_plan_start" >
        </activity>
        <activity
            android:name=".activities.WorkoutPlanFinishedActivity"
            android:label="@string/title_activity_workout_plan_finished" >
        </activity>
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.ExerciseViewAll"
            android:label="@string/title_activity_exercise_view_all"
            android:parentActivityName=".activities.WorkoutPlanAddActivity" >
        </activity>
        <activity
            android:name=".activities.WorkoutPlanViewAll"
            android:label="@string/title_activity_workout_plan_view_all"
            android:parentActivityName=".activities.MainActivity" >
        </activity>
        <activity
            android:name=".activities.StatisticsActivity"
            android:label="@string/title_activity_statistics"
            android:parentActivityName=".activities.MainActivity" >
        </activity>
    </application>

</manifest>
